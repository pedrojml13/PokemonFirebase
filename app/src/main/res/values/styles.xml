<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colores principales -->
    <color name="colorPrimary">#FFCC00</color> <!-- Amarillo Pokémon -->
    <color name="colorPrimaryDark">#FF0000</color> <!-- Rojo Pokémon -->
    <color name="colorAccent">#3B4CCA</color> <!-- Azul Pokémon -->

    <!-- Fondo y texto -->
    <color name="backgroundColor">#FFFFFF</color> <!-- Fondo blanco -->
    <color name="textColor">#000000</color> <!-- Texto negro -->

    <!-- Estilos de editText -->
    <style name="EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16sp</item>
        <item name="android:fontFamily">@font/sauce_barbe</item>
    </style>

    <!-- Estilos de botones -->
    <style name="Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16sp</item>
        <item name="android:fontFamily">@font/sauce_barbe</item>
    </style>

    <!-- Estilos de editText -->
    <style name="TabsTitle">

        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16sp</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
    </style>

    <style name="PokedexTitle">

        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
    </style>


    <!-- Estilo tipo pokemon -->
    <style name="PokemonType1">
        <item name="android:background">@drawable/pokemon_type1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16sp</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
    </style>

    <!-- Estilo tipo pokemon -->
    <style name="PokemonType2">
        <item name="android:background">@drawable/pokemon_type1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16sp</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
    </style>

    <!-- Estilo para textos normales -->
    <style name="NormalTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para fondos de fragmentos -->
    <style name="FragmentBackgroundStyle">
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <!-- Estilo para Switch -->
    <style name="SwitchStyle">
        <item name="android:thumbTint">@color/yellow</item>
        <item name="android:trackTint">@color/blue</item>
    </style>

    <!-- Estilo para Pokémon capturados -->
    <style name="CapturedPokemonStyle">
        <item name="android:background">@drawable/pokemon_pokedex_captured</item>
    </style>

    <!-- Estilo para Pokémon no capturados -->
    <style name="NormalPokemonStyle">
        <item name="android:background">@drawable/pokemon_pokedex_no_captured</item>
    </style>


        <!-- Estilo base para LinearLayouts -->
        <style name="LinearLayoutSetting">
            <item name="android:background">@drawable/setting_linear_layout</item>
            <item name="android:fontFamily">@font/pokemon_solid</item>
        </style>

    <!-- Splash -->
    <style name="Theme.MyApp.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Configuración del Splash Screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="android:windowSplashScreenBackground">@color/background_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">3000</item>

    </style>







</resources>
