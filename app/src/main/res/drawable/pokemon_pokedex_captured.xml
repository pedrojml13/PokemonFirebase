<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color de fondo -->
    <solid android:color="@color/red"/>

    <!-- Bordes redondeados -->
    <corners android:radius="80dp"/>

    <!-- Contorno amarillo -->
    <stroke android:color="@color/yellow" android:width="2dp"/>

    <!-- Sombra -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>

    <!-- Desfase y color de sombra -->
    <shadow android:color="@android:color/black" android:radius="6dp"/>
</shape>
